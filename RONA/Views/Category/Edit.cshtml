@model Category

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border-0 p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edition de la categorie</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-bg-secondary shadow-sm"></div>
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control" style="margin-left:-10px">Editer</button>
            </div>

            <div class="col-6 col-md-3">

                <a asp-controller="Category" asp-action="Index" class="btn btn-light form-control" style="margin-left:-10px">Annuler</a>
            </div>
        </div>

    </div>


</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}