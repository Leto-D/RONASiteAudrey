@model List<Category>




<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
         <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" >
                <i class="bi bi-file-earmark-plus"></i> Nouvelle categorie
                </a>
        </div>
    </div>
    <table class="table table-borderless table-striped">
        <thead>
            <tr>
                <th>Nom de la catègorie</th>
                <th>Ordre d'affichage</th>
                <th>Administration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(x=>x.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                <i class="bi bi-pencil-fill"></i> Editer
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Supprimer
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>